	<div class="breadcrumbs">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 col-md-6 col-12">
					<div class="breadcrumbs-content">
						<h1 class="page-title">{{ad.title}}</h1>
					</div>
				</div>
				<div class="col-lg-6 col-md-6 col-12">
					<ul class="breadcrumb-nav">
						<li>
							<a href="index.html">Home</a>
						</li>
						<li>Ad Details</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- End Breadcrumbs -->
	{{ include('components/alerts.html.twig') }}
	<!-- Start Item Details -->
	<section class="item-details section">
		<div class="container">
			<div class="top-area">
				<div class="row">
					<div class="col-lg-5 col-md-12 col-12">
						<div class="product-images">
							<main id="gallery">
								{% if ad.adImages is not empty %}
									<div class="main-img">
										<img src="{{asset(ad.adImages[0].adImagePath)}}" id="current" alt="{{ ad.adImages[0].adImageName }}">
									</div>
									<div class="images">
										{% for image in ad.adImages %}
											<img src="{{asset(image.adImagePath)}}" class="img" alt="{{image.adImageName}}">
										{% endfor %}
									</div>
								{% else %}
									<div class="main-img">
										<img src="https://static.vecteezy.com/system/resources/thumbnails/001/409/906/small_2x/man-shopping-in-e-commerce-marketplace-vector.jpg" id="current" alt="Default">
									</div>
								{% endif %}
							</main>
						</div>
					</div>
					<div class="col-lg-7 col-md-12 col-12">
						<div class="product-info">
							<h2 class="title">{{ad.title}}</h2>
							<p class="location">
								<i class="lni lni-map-marker"></i>
								<a href="javascript:void(0)">{{ad.adcity}},
									{{ad.adstate}},
									{{ad.adcountry}}</a>
							</p>
							<h3 class="price">{{ad.currency}}{{ad.price|number_format(2, '.', ',')}}</h3>
							<div class="list-info">
								<h4>Item Details</h4>
								<ul>
									<li>
										<span>Date Posted</span>
										{{ad.createdAt.format('l dS F Y')}}</li>
								</ul>
							</div>
							<div class="contact-info">
								<ul>
									<li><a href="tel:+002562352589" class="call"><i class="lni lni-phone-set"></i>{{ad.user.phone}}<span>Call & Get more info</span></a></li>
									<li><a href="mailto:{{ad.user.email}}" class="mail"><i class="lni lni-envelope"></i></a></li>
								</ul>
							</div>
							<div class="social-share">
								<h4>Share Ad</h4>
