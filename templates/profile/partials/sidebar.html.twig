<!-- Start Dashboard Sidebar -->
<div class="dashboard-sidebar">
	<div class="user-image">
		<img src="{{app.user.profileimage ?? " "}}" alt="#">
		<h3>{{app.user.fullname ?? " "}}
			<span>
				<a href="{{path('app_edit_profile', {'id': app.user.id})}}">{{app.user.username ?? " "}}</a>
			</span>
			<span>
				<a href="{{path('app_edit_profile', {'id': app.user.id})}}">{{app.user.status ?? " "}}</a>
			</span>
		</h3>
	</div>
	<div class="dashboard-menu">
		<ul>
			{% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
				<li>
					<a href="{{ path('app_master_admin') }}" {% if app.request.attributes.get('_route') == 'app_master_admin' %} class="active" {% endif %}>
						<i class="lni lni-key"></i>
						Master Admin</a>
				</li>
			{% endif %}
			<li>
				<a href="{{ path('app_dashboard') }}" {% if app.request.attributes.get('_route') == 'app_dashboard' %} class="active" {% endif %}>
					<i class="lni lni-dashboard"></i>
					Dashboard</a>
			</li>
			<li>
				<a href="{{path('app_ad_new')}}" {% if app.request.attributes.get('_route') == 'app_ad_new' %} class="active" {% endif %}>
					<i class="lni lni-circle-plus"></i>
					Post An Ad</a>
			</li>

			<li>
				<a href="{{path('app_ad_index')}}" {% if app.request.attributes.get('_route') == 'app_ad_index' %} class="active" {% endif %}>
					<i class="lni lni-bolt-alt"></i>
					My Ads</a>
			</li>

			<li>
				{# {{path('app_messages')}} #}
				<a href="#" {% if app.request.attributes.get('_route') == 'app_messages' %} class="active" {% endif %} disabled>
					<i class="lni lni-envelope"></i>
					Messages
					<span class="text-danger small">(Coming Soon)</span>
				</a>
			</li>
			{# <li>
																<a href="invoice.html">
																	<i class="lni lni-printer"></i>
																	Sold Items</a>
															</li> #}
			<li>
				<a href="{{ path('app_edit_profile', {'id': app.user.id}) }}" {% if app.request.attributes.get('_route') == 'app_edit_profile' %} class="active" {% endif %}>
					<i class="lni lni-pencil-alt"></i>
					Edit Profile</a>
			</li>
			<li>
				<a href="{{path('app_user_delete', {'id': app.user.id}) }}" {% if app.request.attributes.get('_route') == 'app_user_delete' %} class="active" {% endif %}>
					<i class="lni lni-trash"></i>
					Close account</a>
			</li>

		</ul>
		<div class="button">
			<a class="btn" href="{{path('app_logout')}}">Logout</a>
		</div>
	</div>
</div>
<!-- Start Dashboard Sidebar -->
